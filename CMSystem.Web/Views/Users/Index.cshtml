@model IEnumerable<UserViweModel>

@{
    ViewData["Title"] = "Index";
}
@if (Model.Any())
{
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">
                    Users
                    <small>Manege Users</small>
                </h3>
            </div>
            <div class="card-toolbar">
                <a asp-action="Create" class="btn btn-sm btn-success font-weight-bold">
                    <i class="flaticon2-cube"></i> Create Users
                </a>
            </div>
        </div>
        <div class="card-body">


            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserType)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                @item.FullName
                            </th>
                            <th>
                                @item.Email
                            </th>
                            <th>
                                @item.Mobile
                            </th>
                            <th>
                                @item.Gender
                            </th>
                            <th>
                                @item.UserType
                            </th>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="flaticon flaticon-edit"></i>
                                    Edit
                                </a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="flaticon flaticon-delete"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>

}
else
{
    <div class="card-toolbar">
        <a asp-action="Create" class="btn btn-sm btn-success font-weight-bold">
            <i class="flaticon2-cube"></i> Create User
        </a>
    </div>
    <hr />
    <hr />

    <div class="alert alert-warning">

        No Data !!
    </div>

}
